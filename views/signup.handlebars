<form class="signup-form">
     <h1 id="Sign-Up-Title">SIGN UP</h1>
    <div class="row mx-auto">
        <div class="row justify-content-center">
            <div class="col-sm-4 p-2">
                <input id="first-name" type="text" class="form-control" placeholder="First name" aria-label="First name">
            </div>
        </div>
        <div class="row justify-content-center">
             <div class="col-sm-4 p-2">
                 <input id="last-name" type="text" class="form-control" placeholder="Last name" aria-label="Last name">
            </div>  
        </div>
         <div class="row justify-content-center">
             <div class="col-sm-4 p-2">
                  <input id="email-signup" type="text" class="form-control" placeholder="Email" aria-label="Email">
            </div>  
        </div>
           <div class="row justify-content-center">
             <div class="col-sm-4 p-2">
                  <input id="password-signup" type="text" class="form-control" placeholder="Password" aria-label="Password">
            </div>  
        </div>
         <div class="row justify-content-center">
             <div class="col-sm-4 p-2">
                  <input id="telephone" type="text" class="form-control" placeholder="Telephone" aria-label="Telephone">
            </div>  
        </div>
         <div class="row justify-content-center">
             <div class="d-grid col-sm-4">
                 <button  class="btn SignUp-Button" type="submit">Sign Up</button>
            </div>  
        </div>
    </div>  
</form>

<script src="/js/signup.js"></script>