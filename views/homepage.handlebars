<section id ="general">
  <div class="d-flex justify-content-center">

    <div class="animals"> <img class="mx-auto" src="images/top_img.jpg" class="rounded mx-auto d-block" width="600"
        height="400" alt="dog, cat, turtle"></div>
  </div>
  <div>

    <div style="height: 1px;0px;border-top:50px solid #EBD4FC"></div>
  </div>

  <div class="d-flex justify-content-center circles">
    <img class="img-responsive" src="images/cats.png" width="200" height="200" alt=" Cats clipart">
    <img class="img-responsive" src="images/dogs.png" width="200" height="200" alt="Dogs clipart">
    <img class="img-responsive" src="images/turtles.png" width="200" height="200" alt="Turtle clipart">
  </div>
<div id="homePage-Subtitle">
<h1>Pets Available For Adoption</h1>
</div>
      
 



  <div class="d-flex justify-content-center boxes">
    <!--
    <img class="img-responsive" src="images/Nebraska.jpg" width="200" height="200" alt=" Cats clipart">
    <img class="img-responsive" src="images/Taco.jpg" width="200" height="200" alt="Dogs clipart">
    <img class="img-responsive" src="images/Tank.jpg" width="200" height="200" alt="Turtle clipart">
    -->

    {{#each animals}}
      <div class="card m-3">
        <div class="card-header">
           <img class="img-responsive" src="images/{{this.dataValues.name}}.png" width="200" height="200" alt="image of {{this.dataValues.name}}">
        </div>
        <div class="card-body">
            <h1>{{this.dataValues.name}}</h1>
            Age: {{this.dataValues.age}}<br />
            Breed: {{this.dataValues.breed}}
        </div>
        <div class="card-footer text-center">
          <!-- need to create a POST route for cart -->
          <form method="post" action="cart">
             <input name="id" id="id" type="hidden" value="{{this.dataValues.id}}" />
             <input type="submit" value="Add to Cart" class="btn Sign-Button" />
          </form>
        </div>
      </div>
     
    {{/each}}
  </div>



</section>